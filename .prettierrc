{
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "plugins": ["@shufo/prettier-plugin-blade", "@prettier/plugin-php"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "extraLiners": "",
        "indentInnerHtml": true,
        "parser": "blade",
        "sortHtmlAttributes": "code-guide"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "arrowParens": "always"
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "braceStyle": "per-cs",
        "parser": "php",
        "phpVersion": "8.2",
        "tabWidth": 4
      }
    }
  ]
}
