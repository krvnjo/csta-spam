{
  "arrayBracketSpacing": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "plugins": ["@shufo/prettier-plugin-blade"],
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "extraLiners": "",
        "indentInnerHtml": true,
        "parser": "blade",
        "printWidth": 200,
        "sortHtmlAttributes": "code-guide"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
