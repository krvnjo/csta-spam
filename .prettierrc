{
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
        "@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "extraLiners": "",
                "indentInnerHtml": true,
                "parser": "blade",
                "printWidth": 180,
                "sortHtmlAttributes": "code-guide"
            }
        },
        {
            "files": [
                "*.css"
            ],
            "options": {
                "singleQuote": false
            }
        }
    ]
}
